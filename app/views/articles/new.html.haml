= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br
      = f.text_field :title
  .field
    = f.label :path_type
    %br
      = f.radio_button :path_type, 'pdf'
      = f.label :type_pdf, '上传'
      = f.radio_button :path_type, 'online'
      = f.label :type_online, '在线编辑'
  .field
    = f.label :body
    %br
      = f.text_area :body
  .field
    = f.label :pdf
    %br
    = f.file_field :pdf
  .field
    = f.radio_button :public, '0'
    = f.label :public_true, '公开'
    = f.radio_button :public, '1'
    = f.label :public_false, '不公开'
  .actions
    = f.submit '创建', class: 'button'
