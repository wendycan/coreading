= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, '标题'
    = f.text_field :title
  .field
    = f.label :desc, '描述'
    = f.text_area :desc
  .actions
    = f.submit '保存', class: 'button tiny'
